{
  "name": "personal-site",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "content-v2",
    "www"
  ],
  "scripts": {
    "dev:sanity": "(cd content && yarn dev)",
    "dev:sapper": "(cd www && yarn dev)",
    "dev": "run-p dev:*",
    "build": "(cd www && yarn build)",
    "format": "prettier --plugin-search-dir=. --write './{www,content-v2}/**/*.{js,ts,css,svelte,html,md,json}'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "prettier-plugin-svelte": "1.1.0",
    "svelte": "^3.23.2"
  },
  "volta": {
    "node": "12.15.0",
    "yarn": "1.22.0"
  }
}
