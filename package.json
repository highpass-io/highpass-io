  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:sass": "yarn build:sass && node-sass src/styles/index.scss --include-path=. -w -o static/build",
    "dev:sapper": "sapper dev",
    "dev:engine": "ts-node --transpile-only index.ts",
    "dev": "run-p dev:*",
    "build:sass": "node src/styles/compile.js && node-sass src/styles/index.scss --include-path=. --output-style=compressed -o static/build",
    "build:sapper": "sapper export",
    "build:engine": "ts-node ./scripts/build.ts",
    "build": "run-s build:*",
    "start": "node __sapper__/build",
    "test": "jest",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "format": "prettier --plugin-search-dir=. --write './{www,content-v2}/**/*.{js,ts,css,svelte,html,md,json}'"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "date-fns": "^2.14.0",
    "isomorphic-fetch": "^2.2.1",
    "polka": "next",
    "prismjs": "^1.21.0",
    "sirv": "^0.4.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
