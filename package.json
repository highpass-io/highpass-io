    "format": "prettier --write '*.{js,md}' 'src/**/*.{js,scss,css,md}'"
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2"
  }
}
