    "cypress": "^4.10.0",
    "jest": "^26.4.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-svelte": "1.1.0",
    "prettier": "1.19.1",
    "rehype-parse": "^7.0.1",
    "remark-html": "^12.0.0",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup": "^2.3.4",
    "sapper": "^0.27.0",
