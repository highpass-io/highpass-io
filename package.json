{
  "name": "personal-site",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:sass": "yarn build:sass && node-sass src/styles/index.scss --include-path=. -w -o static/build",
    "dev:content": "ts-node --transpile-only ./scripts/build.ts",
    "dev": "run-p dev:*",
    "build:sass": "node src/styles/compile.js && node-sass src/styles/index.scss --include-path=. --output-style=compressed -o static/sass",
    "build:content": "ts-node ./scripts/build.ts",
    "build": "run-s build:sass build:content",
    "start": "yarn dev",
    "test": "jest src",
    "format": "prettier --write './{src,content}/**/*.{js,ts,css,html,md,json}'"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "date-fns": "^2.16.1",
    "isomorphic-fetch": "^2.2.1",
    "prismjs": "^1.21.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/mdast": "^3.0.3",
    "@types/unist": "^2.0.3",
    "jest": "^26.4.2",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.1",
    "rehype-parse": "^7.0.1",
    "remark-html": "^12.0.0",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "unified": "^9.2.0",
    "unified-stream": "^1.0.6"
  },
  "volta": {
    "node": "12.15.0",
    "yarn": "1.22.0"
  }
}
