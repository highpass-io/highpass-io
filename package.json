{
  "name": "personal-site",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:sass": "yarn build:sass && node-sass src/styles/index.scss --include-path=. -w -o static/build",
    "dev:content": "ts-node --transpile-only ./scripts/build.ts",
    "dev": "run-p dev:*",
    "build:sass": "node src/styles/compile.js && node-sass src/styles/index.scss --include-path=. --output-style=compressed -o static/sass",
    "build:content": "ts-node ./scripts/build.ts",
    "build": "run-s build:sass build:content",
    "start": "yarn dev",
    "test": "jest src",
    "format": "prettier --write './{src,content}/**/*.{js,ts,css,svelte,html,md,json}'"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "date-fns": "^2.16.1",
    "isomorphic-fetch": "^2.2.1",
    "polka": "next",
    "prismjs": "^1.21.0",
    "sirv": "^1.0.6",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@types/jest": "^26.0.13",
    "@types/mdast": "^3.0.3",
    "@types/unist": "^2.0.3",
    "jest": "^26.4.2",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.1",
    "prettier-plugin-svelte": "1.2.1",
    "rehype-parse": "^7.0.1",
    "remark-html": "^12.0.0",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "rollup": "^2.26.10",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.28.5",
    "svelte": "^3.24.1",
    "svelte-image": "^0.2.7",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "unified": "^9.2.0",
    "unified-stream": "^1.0.6"
  },
  "volta": {
    "node": "12.15.0",
    "yarn": "1.22.0"
  }
}
