{
  "name": "personal-site",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:parcel": "parcel src/index.js",
    "dev:hugo": "hugo serve -D",
    "start": "run-p dev:*",
